<Window x:Class="FtpFileRegistry.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800"
        Icon="../Icons/ftp_folder.ico">


    <Grid>
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        Visibility="Visible"
                        ToolTipText="Ftp Registry"
                        IconSource= "../Icons/ftp_folder.ico"
                        MenuActivation="LeftOrRightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu x:Name="ExitContextMenu">
                    <MenuItem x:Name="SettingsMenuItem" Header="Settings"></MenuItem>
                    <MenuItem x:Name="ExitMenuItem" Header="Exit"></MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
